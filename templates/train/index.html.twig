{% extends 'base.html.twig' %}

{% block title %}Train{% endblock %}

{% block body %}
    <h1>Train</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Numero</th>
                <th>Design</th>
                <th>Itineraire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for train in trains %}
            <tr>
                
                <td>{{ train.numerotrain }}</td>
                <td>{{ train.design }}</td>
                <td>{{ train.itineraire }}</td>
                <td>
                    <a href="{{ path('train_edit', {'id': train.id}) }}"><button type="button" class="btn btn-primary"><i class="fa fa-edit"></i></button></a>
                    <a href="{{ path('train_delete', {'id': train.id}) }}"><button type="button" class="btn btn-danger"><i class="fa fa-trash"></i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <div align ="center">
        <a href="{{ path('train_new') }}"><button type="button" class="btn btn-primary btn-lg btn-block">AJOUTER</button></a>
    </div>
    {{ include("partials/footer.html.twig") }}
{% endblock %}
